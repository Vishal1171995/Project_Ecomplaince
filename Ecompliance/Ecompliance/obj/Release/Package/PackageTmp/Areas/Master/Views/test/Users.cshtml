<script type="text/javascript">
    $(document).ready(function () {
        $("#dialog-link").bind("click", {}, btnAddClick);
    });
    function btnAddClick() {
        var dialog = $("#dialog").dialog({
            autoOpen: false,
            modal: true,
            title: "Act Master",
            width: 909,
        });
        dialog.dialog("open");
        event.preventDefault();
    }
</script>

