
@{
    ViewBag.Title = "FileExplorer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container maincontainer">
    <!--------------Details-------------->
    <div class="col-xs-12 col-sm-12 col-md-12 extra bodbtt">
        <div class="col-xs-12 col-sm-4 col-md-3 extra">
            <div class="col-xs-12 col-sm-6 col-md-6 extra">
