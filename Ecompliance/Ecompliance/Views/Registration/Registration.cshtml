@model Ecompliance.ViewModel.SignUpVM
@using CaptchaMvc.HtmlHelpers;
@using CaptchaMvc;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <!--<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">-->
    <title> ACT REGISTER</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" type="image/x-icon" href="images/favicon.png">
    <!-- http://davidbcalhoun.com/2010/viewport-metatag -->

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <script src="~/Scripts/jquery/external/jquery/jquery.js"></script>
    <script src="~/Scripts/jquery/jquery-ui.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap.css" />

    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css" />

    <script src='https://www.google.com/recaptcha/api.js'></script>
    <style>
        .tooltip-inner {
            max-width: 350px;
            width: 350px;
        }
    </style>
</head>

<body class="bg-signup">
    <div class="region">
        <div class="container">
            <div class="col-md-5">
                <div class="signupp-form">
                    <div class="form-brand">
                        <a href="/">
                            <img alt="ACT" src="~/Content/images/a8.png" style="margin-left:10px;">
                        </a>

                    </div>
                    <div class="row signup-align">
                        <div class="col-md-12 signup-block">
                            <h3></h3>
                            <p></p>
                        </div>
                        <div class="col-md-12">
                            <form data-toggle="validator" role="form" action="/Registration" method="post">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group input-group">
                                            @Html.TextBoxFor(model => model.ObjCutomer.SubDomain, new { @class = "form-control input-lg", @placeholder = "Company Name", @name = "Company" })
                                            <div class="input-group-addon">.myndact.com&nbsp;&nbsp;</div>
                                        </div>
                                        <span class="help-block small with-errors">@Html.ValidationMessageFor(model => model.ObjCutomer.Name)</span>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="sr-only" for="name">User Name</label>
                                        @Html.TextBoxFor(model => model.ObjUser.First_Name, new { @class = "form-control", @placeholder = "Administrator Name", @name = "FirstName" })
                                        <span class="help-block small with-errors">@Html.ValidationMessageFor(model => model.ObjUser.First_Name)</span>
                                    </div>
                                    <div class="col-md-12 ">
                                        @Html.TextBoxFor(model => model.ObjUser.Contact_Number,
                                                         new { @class = "form-control", @placeholder = "Phone Number", @name = "ContactNumber" })

                                        <span class="help-block small with-errors">@Html.ValidationMessageFor(model => model.ObjUser.Contact_Number)</span>
                                    </div>
                                    <div class="col-md-12 ">

                                        @Html.TextBoxFor(model => model.ObjUser.Email, new
                                   {
                                       @class = "form-control",
                                       @placeholder = "Enter Email Address",
                                       @name = "UserName",
                                       @id = "UserName"
                                   })

                                        <span class="help-block small with-errors">@Html.ValidationMessageFor(model => model.ObjUser.Email)</span>
                                    </div>
                                    <div class="col-md-12">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @name = "Password", @id = "Password" })

                                        <span class="help-block small with-errors">@Html.ValidationMessageFor(model => model.Password)</span>
                                    </div>

                                    <div class="col-md-12">
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", @name = "ConfirmPassword", @id = "CPassword" })
                                        <span class="help-block small with-errors">@Html.ValidationMessageFor(model => model.ConfirmPassword)</span>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="news">

                                            @Html.CheckBoxFor(model => model.IsTNC, new { @class = "checkboxx" })

                                            I agree with the <a href="#" data-target="#myModal">Terms and Conditions</a>
                                            <span class="help-block small with-errors">    @Html.ValidationMessageFor(model => model.IsTNC)</span>

                                        </div>
                                        
                                    </div>

                                    <div class="col-md-12">
                                        @Html.Captcha("Refresh", "Enter the text shown in image", 5, "Please enter the Captcha Code.", true)
                                    </div>
                                    <div class="col-md-12">
                                        @Html.ValidationSummary(false)
                                    </div>
                                    <div class="col-md-12 news" style="margin-top:20px;">
                                        <button type="submit" class="btn btn-lg btn-default btn-primary">Create Account</button>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="news">
                                            Already have an account?
                                            <a href="@Url.RouteUrl("Defaultloginview")" style="color:#od638f">Login</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="sgnup-ftr">
            <p>Copyright &copy; 2013-@System.DateTime.Now.Year, Mynd Solutions Pvt. Ltd. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip123"]').tooltip();
    });
</script>
@Scripts.Render("~/bundles/jqueryval")
<script>
    var defaultRangeValidator = $.validator.methods.range;
    $.validator.methods.range = function (value, element, param) {
        if (element.type === 'checkbox') {
            // if it's a checkbox return true if it is checked
            return element.checked;
        } else {
            // otherwise run the default validation function
            return defaultRangeValidator.call(this, value, element, param);
        }
    }
</script>
