<script type="text/javascript">
    $(document).ready(function()
    {
        createGrid("VEcom_Doc_Task","DOCID");
    });
    function createGrid(tableName,ID) {
    var url ='@Url.RouteUrl("GetGridData")';
        $("#Kgrid").kendoGrid({
            dataSource: {
                type: "json",
                transport: {
                    read: {
                        url: url, //'testKgrid.aspx/GetData',
                        dataType: "json",
                        type: "POST",
                        contentType: "application/json; charset=utf-8"
                    },
                    parameterMap: function (data, type) {
                        return JSON.stringify({
                            tableName: tableName,
                            ID:ID,
                            page: data.page,
                            pageSize: data.pageSize,
                            skip: data.skip,
                            take: data.take,
                            sorting: data.sort === undefined ? null : data.sort,
                            filter: data.filter === undefined ? null : data.filter
                        });
                    }
                },
                schema: {
                    model: {
                        fields: {
                            CompName: { type: "string" },
                            SiteName: { type: "string" },
                            Full_Name: { type: "string" },
                            ContName: { type: "string" },
                            Creation_Desc: { type: "string" },
                            Creation_Remarks: { type: "string" }
                        }
                    },
                    data: function (data) {
                        //                    return $.parseJSON(data.d).Data || [];
                        alert(data.IsSuccess);
                        var res = $.parseJSON(data.Data);
                        if (res.Data.length > 0) {
                            return res.Data || [];
                        }
                    },
                    total: function (data) {
                        var res = $.parseJSON(data.Data);
                        if (res.Data.length > 0) {
                            return res.Total || [];
                        }
                    }
                },
                pageSize: 2,
                serverPaging: true,
                serverFiltering: true,
                serverSorting: true
            },
            noRecords: true,
            groupable: true,
            filterable: true,
            sortable: {
                mode: "multiple"
            },
            pageable: {
                pageSizes: true,
                refresh: true
            },
            columns: [{ field: "ActivityType", title: "Activity Type", width: 100 },
                { field: "CompName", title: "Company Name", width: 100 },
                { field: "SiteName", title: "Site Name", width: 100 },
                { field: "Full_Name", title: "Act Name", width: 100 },
                { field: "ContName", title: "Contractor Name", width: 100 },
                { field: "Creation_Desc", title: "Creation Desc", width: 100 },
                { field: "Creation_Remarks", title: "Creation Remarks", width: 150 },
            ]
        });
    }
</script>

